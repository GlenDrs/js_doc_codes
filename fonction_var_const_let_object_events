<script>
{
	const car = {type:"Ford", color:"white"};
    car.color = "blue";
    car.owner = "Glen";
function mySecondFc(){
	document.getElementById("demo-obj").innerHTML = "Hi mr " + car.owner + "your car's color is: " +car.color ;
}
}

function showDate(){
document.getElementById("date-demo").innerHTML = Date();
}

let arr_elements = ["water", "earth", "fire", "wind"];
let chaine = "water resist watch";

function sliceArr(){
    document.getElementById("slice-arr").innerHTML = arr_elements.slice(0,3);
    document.getElementById("slice-chain").innerHTML = chaine.slice(4, 11);

}
</script>
 

<button type="button" onclick="myFunction()">Try it</button>
